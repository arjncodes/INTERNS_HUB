@model INTERNS_HUB.Models.CompanyLogin
@{
    ViewBag.Title = "CompanyLogin_PageLoad";
    Layout = "~/Views/Shared/RegistrationFormLayout.cshtml";
}


@using (Html.BeginForm("CompanyLogin_BtnClick", "CompanyUser", FormMethod.Post))
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Company Login</div>
                    <div class="card-body">
                        @Html.LabelFor(m => m.CompanyEmail, "Company Email", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CompanyEmail, new { @class = "form-control", placeholder = "Enter company email", required = "required" })

                        @Html.LabelFor(m => m.CompanyPassword, "Password", new { @class = "form-label" })
                        @Html.PasswordFor(m => m.CompanyPassword, new { @class = "form-control", placeholder = "Enter password", required = "required" })

                        <div class="form-group mt-3 text-center">
                            <a href="@Url.Action("CompanyRegistration_PageLoad","CompanyUser")" id="registerLink">Not Registered? Register Here</a>
                        </div>

                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}