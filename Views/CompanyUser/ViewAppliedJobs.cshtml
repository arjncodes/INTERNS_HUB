@model List<INTERNS_HUB.Models.ApplicantsModel>
@{
    ViewBag.Title = "ViewAppliedJobs";
    Layout = "~/Views/Shared/CompanyDashboardLayout.cshtml";
}

<div class="content">
    <style>
        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .special-field {
            background-color: #d9e2e7;
            color: #050000;
            text-align: center;
            padding: 20px;
            margin: 50px auto;
            width: 80%;
            border-radius: 10px;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control {
            margin-bottom: 10px;
        }

        .btn-primary {
            background-color: #264653;
            border-color: #264653;
        }

            .btn-primary:hover {
                background-color: #20568b;
                border-color: #20568b;
            }
    </style>
    <h1 class="page-heading" style="text-align: center">Applications</h1>
    <br />
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Internship Name</th>
                <th>Phone</th>
                <th>Highest Qualification</th>
                <th>Year of Completion</th>
                <th>Experience</th>
                <th>Resume</th>
                <th>Profile</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var applicant in Model)
            {
                <tr>
                    <td>@applicant.FullName</td>
                    <td>@applicant.Email</td>
                    <td>@applicant.InternshipName</td>
                    <td>@applicant.Phone</td>
                    <td>@applicant.HighestQualification</td>
                    <td>@applicant.YearOfCompletion</td>
                    <td>@applicant.Experiance</td>

                    <td>
                        @if (!string.IsNullOrEmpty(applicant.ResumeFile))
                        {
                            <a href="@Url.Action("DownloadResume", "CompanyUser", new { resumeFile = applicant.ResumeFile })">Download</a>
                        }
                        else
                        {
                            <span>No Resume</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("UserDetailsProfile", "CompanyUser", new { userId = applicant.UserId })">View Profile</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
