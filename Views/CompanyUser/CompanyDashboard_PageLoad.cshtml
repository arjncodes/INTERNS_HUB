
@{
    ViewBag.Title = "CompanyDashboard_PageLoad";
    Layout = "~/Views/Shared/CompanyDashboardLayout.cshtml";
}

<div class="content">
    <style>
        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .special-field {
            background-color: #d9e2e7;
            color: #050000;
            text-align: center;
            padding: 20px;
            margin: 50px auto;
            width: 80%;
            border-radius: 10px;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control {
            margin-bottom: 10px;
        }

        .btn-primary {
            background-color: #264653;
            border-color: #264653;
        }

            .btn-primary:hover {
                background-color: #20568b;
                border-color: #20568b;
            }
    </style>
    <div class="container-fluid pt-4 px-4">

        <div class="row g-4">
            <div class="col-sm-6 col-xl-3">
                <div class="bg-light rounded d-flex align-items-center justify-content-between p-4 card h-100">
                    <i class="bi bi-briefcase fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Total Posted:  @ViewBag.CountOfPostedJobs</p>

                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="bg-light rounded d-flex align-items-center justify-content-between p-4 card h-100">
                    <i class="bi bi-person fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Total Candidates :@ViewBag.CountOfCandidates </p>

                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
