@model INTERNS_HUB.Models.CompanyReg
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>New Company Registration</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Ubuntu', sans-serif;
            background-color: #f8f9fa;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .special-field {
            background-color: #d9e2e7;
            color: #050000;
            text-align: center;
            padding: 20px;
            margin: 50px auto;
            width: 80%;
            border-radius: 10px;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control {
            margin-bottom: 10px;
        }

        .btn-primary {
            background-color: #264653;
            border-color: #264653;
        }

            .btn-primary:hover {
                background-color: #20568b;
                border-color: #20568b;
            }
    </style>
</head>

<body>
    <div class="content">
        <div class="special-field">
            <h1>Company Registration</h1>
            @using (Html.BeginForm("CompanyRegistration_BtnClick","CompanyUser",FormMethod.Post))
            {
        <div class="row g-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.CompanyName, "Company Name", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", placeholder = "Enter company name", required = "required" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.CompanyDescription, "About Company", new { @class = "form-label" })
                @Html.TextAreaFor(m => m.CompanyDescription, new { @class = "form-control", placeholder = "About Company", required = "required" })
            </div>

            <div class="col-md-6">
                @Html.LabelFor(m => m.CompanyLocation, "Company Location", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.CompanyLocation, new { @class = "form-control", placeholder = "Enter company location", required = "required" })
            </div>

            <div class="col-md-6">
                @Html.LabelFor(m => m.Industry, "Industry", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Industry, new { @class = "form-control", placeholder = "Enter industry" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.Website, "Website", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Website, new { @class = "form-control", placeholder = "Enter website" })
            </div>

            <div class="col-md-6">
                @Html.LabelFor(m => m.CompanyEmail, "Company Email", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.CompanyEmail, new { @class = "form-control", placeholder = "Enter company email", required = "required" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.CompanyPassword, "Company Password", new { @class = "form-label" })
                @Html.PasswordFor(m => m.CompanyPassword, new { @class = "form-control", placeholder = "Enter company password", required = "required" })
            </div>

            <div class="col-md-6">
                @Html.LabelFor(m => m.ConfirmPassword, "confirm Password", new { @class = "form-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Your Password", required = "required" })
            </div>




            <div class="col-12">
                <button type="submit" class="btn btn-primary">Send for Verification</button>
                <br />
                <br />

                <a href="@Url.Action("CompanyLogin_PageLoad","CompanyUser")" id="registerLink">Already Registered? Login Here</a>
            </div>
        </div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
