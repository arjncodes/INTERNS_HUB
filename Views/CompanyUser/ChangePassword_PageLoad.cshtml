@model INTERNS_HUB.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword_PageLoad";
    Layout = "~/Views/Shared/CompanyDashboardLayout.cshtml";
}

<style>
    /* Add your styles here */
    .content {
        
        margin: 50px auto;
        width: 50%; /* Adjust the width as needed */
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="password"],
    input[type="submit"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        background-color: #264653;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #20568b;
        }
</style>

<div class="content">
    @using (Html.BeginForm("ChangePassword_BtnClick", "CompanyUser", FormMethod.Post))
    {
        @Html.LabelFor(m => m.OldPassword)
        @Html.PasswordFor(m => m.OldPassword)
        <br />
        @Html.LabelFor(m => m.NewPassword)
        @Html.PasswordFor(m => m.NewPassword)

        <br />
        @Html.LabelFor(m => m.ConfirmNewPassword)
        @Html.PasswordFor(m => m.ConfirmNewPassword)
        <br />
        <input type="submit" value="Change Password" />
    }
</div>
