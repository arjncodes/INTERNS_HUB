@model INTERNS_HUB.Models.NormalUserReg
@{
    ViewBag.Title = "UserRegistration_PageLoad";
    Layout = "~/Views/Shared/RegistrationFormLayout.cshtml";
}

@using (Html.BeginForm("UserRegistration_BtnClick", "NormalUser", FormMethod.Post))
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Candidate Registration</div>
                    <div class="card-body">
                        @Html.LabelFor(m => m.FullName, "Name")
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @required = "required" })

                        @Html.LabelFor(m => m.Email, "Email")
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })

                        @Html.LabelFor(m => m.LoginPassword, "Password")
                        @Html.PasswordFor(m => m.LoginPassword, new { @class = "form-control", @required = "required" })

                        @Html.LabelFor(m => m.ConfirmPassword, "Confirm Password")
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required" })

                        <div class="form-group mt-3 text-center">
                            <a href="@Url.Action("CandidateLogin_PageLoad","NormalUser")" id="loginLink">Already Registered? Login here</a>
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
