@model INTERNS_HUB.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword_PageLoad";
    Layout = "~/Views/Shared/UserDashboardLayout.cshtml";
}

@using (Html.BeginForm("ChangePassword_BtnClick", "NormalUser", FormMethod.Post))
{
    @Html.LabelFor(m => m.OldPassword)
    @Html.PasswordFor(m => m.OldPassword)
    <br />
    @Html.LabelFor(m => m.NewPassword)
    @Html.PasswordFor(m => m.NewPassword)

    <br />
    @Html.LabelFor(m => m.ConfirmNewPassword)
    @Html.PasswordFor(m => m.ConfirmNewPassword)
    <br />
    <input type="submit" value="Change Password" />
}


