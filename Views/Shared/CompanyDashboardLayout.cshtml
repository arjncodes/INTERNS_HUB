
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/Content/CompanyDashboardStyles.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet" />
</head>

<body>
    <!-- Sidebar Start -->
    <div class="sidebar">
        <a href="#" class="sidebar-brand">@ViewBag.CompanyName</a>
        <ul class="sidebar-menu">
            <li><a href="@Url.Action("CompanyDashboard_PageLoad","CompanyUser")"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
            <li><a href="@Url.Action("PostInternships_PageLoad","CompanyUser")"><i class="bi bi-briefcase-fill me-2"></i>Post A job</a></li>
            <li><a href="@Url.Action("PostedJobList_PageLoad","CompanyUser")"><i class="bi bi-list-ul me-2"></i>Posted Jobs</a></li>
            <li><a href="@Url.Action("ViewAppliedJobs","CompanyUser")"><i class="bi bi-journal-text me-2"></i>View Applications</a></li>
            <li><a href="@Url.Action("ChangePassword_PageLoad","CompanyUser")"><i class="bi bi-person me-2"></i>Settings</a></li>
            <li><a href="@Url.Action("Logout","CompanyUser")"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
        </ul>
    </div>
    <!-- Sidebar End -->
    <!-- Content Start -->
    
    @RenderBody()
    
    <!-- Content End -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
