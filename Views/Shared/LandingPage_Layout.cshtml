        <div class="info_container layout_padding-top">
            <div class="container">
                <div class="info_top">
                    <div class="info_logo">
                        <img src="images/logo.png" alt="" />
                        <span>InternsHub</span>
                    </div>
                    <div class="social_box">
                        <a href="#"><img src="~/MainViewFiles/images/fb.png" alt=""></a>
                        <a href="#"><img src="~/MainViewFiles/images/instagram.png" alt=""></a>
                        <a href="#"><img src="~/MainViewFiles/images/linkedin.png" alt=""></a>

                        <a href="#"><img src="~/MainViewFiles/images/youtube.png" alt=""></a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-9 col-md-10 mx-auto">
