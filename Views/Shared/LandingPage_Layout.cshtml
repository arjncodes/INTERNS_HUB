<body>
    <div class="hero_area">
        <!-- header section starts -->
        <header class="header_section">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container">

                    <a class="navbar-brand" href="@Url.Action("InternsHub_MainView", "InternsHub")">
                        <img src="images/logo.png" alt="" />
                        <span>InternHub</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav  ">
                            <li class="nav-item active">
                                <a class="nav-link" href="@Url.Action("InternsHub_MainView","InternsHub")">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("About_PageLoad", "InternsHub")"> About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Work_PageLoad", "InternsHub")">Work </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Category_PageLoad", "InternsHub")"> Category </a>
                            </li>
                        </ul>
                        <div class="user_option">
                            <ul class="nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("CandidateLogin_PageLoad", "NormalUser")">Candidate</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("CompanyLogin_PageLoad", "CompanyUser")">Employer</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Admin User</a>
                                </li>
                            </ul>
                            <form class="form-inline my-2 my-lg-0 ml-0 ml-lg-4 mb-3 mb-lg-0">
                                <button class="btn  my-2 my-sm-0 nav_search-btn" type="submit"></button>
                            </form>
                        </div>


                    </div>
                    <div>
                        <div class="custom_menu-btn ">
                            <button>
                                <span class=" s-1">
                                </span>
                                <span class="s-2">
                                </span>
                                <span class="s-3">
                                </span>
                            </button>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <!-- end header section -->
        <!-- slider section -->
        <section class="slider_section ">
            <div class="carousel_btn-container">
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active">01</li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1">02</li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2">03</li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-5 offset-md-1">
                                    <div class="detail-box">
                                        <h1>
                                            Find Your <br>
                                            Next Internship <br>
                                            Here
                                        </h1>
                                        <p>
                                            Unlock Opportunities and Grow with Our Internship Platform
                                        </p>
                                        <div class="btn-box">
                                            <a href="" class="btn-1">
                                                About Us
                                            </a>
                                            <a href="" class="btn-2">
                                                Contact Us
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="offset-md-1 col-md-4 img-container">
                                    <div class="img-box">
                                        <img src="~/MainViewFiles/images/slider-img.png" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item ">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-5 offset-md-1">
                                    <div class="detail-box">
                                        <h1>
                                            Internships Unlocked <br>

                                        </h1>
                                        <p>
                                            Unlock Opportunities and Grow with Our Internship Platform
                                        </p>
                                        <div class="btn-box">
                                            <a href="" class="btn-1">
                                                About Us
                                            </a>
                                            <a href="" class="btn-2">
                                                Contact Us
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="offset-md-1 col-md-4 img-container">
                                    <div class="img-box">
                                        <img src="~/MainViewFiles/images/slider-img.png" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item ">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-5 offset-md-1">
                                    <div class="detail-box">
                                        <h1>
                                            InternConnect <br>
                                            Explore Internships <br>
                                            Here
                                        </h1>
                                        <p>
                                            Unlock Opportunities and Grow with Our Internship Platform
                                        </p>
                                        <div class="btn-box">
                                            <a href="" class="btn-1">
                                                About Us
                                            </a>
                                            <a href="" class="btn-2">
                                                Contact Us
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="offset-md-1 col-md-4 img-container">
                                    <div class="img-box">
                                        <img src="~/MainViewFiles/images/slider-img.png" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- end slider section -->
    </div>

    @RenderBody();

    <!-- info section -->
